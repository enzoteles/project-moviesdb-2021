<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/moviePopularPageFragment">


    <fragment
        android:id="@+id/moviePopularPageFragment"
        android:name="com.example.project_movies_2021.presentation.ui.fragment.MoviePopularPageFragment"
        android:label="movie_popular_page_fragment"
        tools:layout="@layout/movie_popular_page_fragment" >
        <action
            android:id="@+id/action_moviePopularPageFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.project_movies_2021.presentation.ui.fragment.DetailFragment"
        tools:layout="@layout/fragment_detail"
        android:label="DetailFragment" >
        <argument
            android:name="MOVIE_POPULAR"
            app:argType="com.example.project_movies_2021.domain.model.ResultMapper" />
    </fragment>
</navigation>